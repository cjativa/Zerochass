{
  "require": {
    "acoustep/craft-easymde": "^0.1.3",
    "craftcms/aws-s3": "1.2.5",
    "craftcms/cms": "3.3.15",
    "craftcms/redactor": "^2.4",
    "craftcms/webhooks": "2.2.0",
    "experience/smartdown": "3.0.1",
    "lukeyouell/craft-sidebarthemes": "1.0.5",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
