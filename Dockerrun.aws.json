{
    "AWSEBDockerrunVersion": "2",
    "volumes": [
        {
            "host": {
                "sourcePath": "/etc/letsencrypt"
            },
            "name": "letsencrypt"
        }
    ],
    "containerDefinitions": [
        {
            "name": "php",
            "image": "116893520615.dkr.ecr.us-east-1.amazonaws.com/zerochass/cms:production-php",
            "essential": true,
            "memory": 256,
            "portMappings": [
                {
                    "hostPort": 9000,
                    "containerPort": 9000
                }
            ]
        },
        {
            "name": "node",
            "image": "116893520615.dkr.ecr.us-east-1.amazonaws.com/zerochass/cms:production-node",
            "essential": true,
            "memory": 600,
            "portMappings": [
                {
                    "hostPort": 3000,
                    "containerPort": 3000
                }
            ],
            "command": [
                "pm2",
                "start",
                "ecosystem.config.js",
                "--no-daemon"
            ]
        },
        {
            "name": "nginx",
            "image": "116893520615.dkr.ecr.us-east-1.amazonaws.com/zerochass/cms:production-nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                },
                {
                    "hostPort": 443,
                    "containerPort": 443
                }
            ],
            "links": [
                "php",
                "node"
            ],
            "mountPoints": [
                {
                    "containerPath": "/etc/letsencrypt",
                    "sourceVolume": "letsencrypt"
                }
            ],
            "volumesFrom": [
                {
                    "sourceContainer": "php"
                }
            ]
        }
    ]
}