{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
        {
            "name": "php",
            "image": "116893520615.dkr.ecr.us-east-1.amazonaws.com/zerochass/cms:production-php",
            "essential": true,
            "memory": 256,
            "portMappings": [
                {
                    "hostPort": 9000,
                    "containerPort": 9000
                }
            ]
        },
        {
            "name": "node",
            "image": "116893520615.dkr.ecr.us-east-1.amazonaws.com/zerochass/cms:production-node",
            "essential": true,
            "memory": 256,
            "portMappings": [
                {
                    "hostPort": 4000,
                    "containerPort": 4000
                }
            ],
            "command": [
                "npm",
                "run",
                "serverProd"
            ]
        },
        {
            "name": "nginx",
            "image": "116893520615.dkr.ecr.us-east-1.amazonaws.com/zerochass/cms:production-nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "volumesFrom": [
                {
                    "sourceContainer": "php"
                }
            ]
        }
    ],
    "links": [
        "php",
        "node",
        "nginx"
    ]
}